{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "lib": ["esnext", "dom"],
    "module": "commonjs",
    "noUnusedLocals": false,
    "outDir": "build",
    "skipLibCheck": true,
    "strict": true,
    "target": "esnext"
  },
  "include": ["src", "types"]
}
