{
  "author": "Riccardo Bellingeri",
  "bin": {
    "bundle-checker": "./bin/run"
  },
  "bugs": {
    "url": "https://github.com/rbelling/bundle-checker/issues"
  },
  "dependencies": {
    "@oclif/command": "^1",
    "@oclif/config": "^1",
    "@oclif/plugin-help": "^2",
    "bytes": "^3.1.0",
    "globby": "^9.2.0",
    "ora": "^3.3.0",
    "size-limit": "^1.0.0",
    "tslib": "^1"
  },
  "description": "CLI tool that generates stats on bundle files",
  "devDependencies": {
    "@oclif/dev-cli": "^1",
    "@oclif/test": "^1",
    "@oclif/tslint": "^3",
    "@types/bytes": "^3.0.0",
    "@types/chai": "^4",
    "@types/jest": "^24.0.11",
    "@types/mocha": "^5",
    "@types/node": "^11.13.0",
    "chai": "^4",
    "danger": "^7.0.19",
    "husky": "^1.3.1",
    "jest": "^24.5.0",
    "lint-staged": "^8.1.5",
    "mocha": "^5",
    "nyc": "^13",
    "prettier": "^1.16.4",
    "ts-jest": "^24.0.0",
    "ts-node": "^8.0.3",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.0.1",
    "tslint": "^5.15.0",
    "typescript": "^3.3.3333"
  },
  "homepage": "https://github.com/rbelling/bundle-checker#readme",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "oclif": {
    "bin": "bundle-checker",
    "commands": "./build/commands",
    "plugins": [
      "@oclif/plugin-help"
    ]
  },
  "files": [
    "/bin",
    "/build",
    "/oclif.manifest.json"
  ],
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "node",
      "ts"
    ],
    "roots": [
      "<rootDir>/src"
    ],
    "testEnvironment": "node",
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.ts$",
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    }
  },
  "keywords": [
    "bundle size",
    "ci tool",
    "performance monitoring"
  ],
  "license": "ISC",
  "lint-staged": {
    "*.ts": [
      "git add",
      "tslint --fix"
    ]
  },
  "main": "index.js",
  "name": "bundle-checker",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rbelling/bundle-checker.git"
  },
  "scripts": {
    "build": "rm -rf ./build/* && tsc -p ./tsconfig.prod.json",
    "lint:fix": "yarn lint --fix",
    "lint": "tslint **/*.ts",
    "postpack": "rm -f oclif.manifest.json",
    "prepack": "rm -rf ./build && tsc -b && oclif-dev manifest && oclif-dev readme",
    "test": "jest"
  },
  "version": "1.0.0"
}
