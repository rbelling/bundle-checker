{
  "name": "bundle-checker",
  "version": "1.0.0",
  "description": "CLI tool that generates stats on bundle files",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rbelling/bundle-checker.git"
  },
  "keywords": [
    "bundle size",
    "ci tool",
    "performance monitoring"
  ],
  "author": "Riccardo Bellingeri",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/rbelling/bundle-checker/issues"
  },
  "homepage": "https://github.com/rbelling/bundle-checker#readme",
  "scripts": {
    "build": "rm -rf ./build/* && tsc -p ./tsconfig.prod.json",
    "test": "jest",
    "lint": "tslint **/*.ts",
    "lint:fix": "yarn lint --fix"
  },
  "devDependencies": {
    "@types/bytes": "^3.0.0",
    "@types/jest": "^24.0.11",
    "@types/node": "^11.13.0",
    "husky": "^1.3.1",
    "jest": "^24.5.0",
    "lint-staged": "^8.1.5",
    "prettier": "^1.16.4",
    "ts-jest": "^24.0.0",
    "ts-node": "^8.0.3",
    "tslint": "^5.15.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "^3.3.3333"
  },
  "dependencies": {
    "bytes": "^3.1.0",
    "globby": "^9.2.0",
    "ora": "^3.3.0",
    "size-limit": "^1.0.0"
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "node"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "tslint --fix",
      "git add"
    ]
  }
}
